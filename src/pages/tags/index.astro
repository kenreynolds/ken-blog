---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob('../posts/*.md');
const pageTitle = 'Tag Index';
const tags = [...new Set(allPosts.map(
    post => post.frontmatter.tags).flat()
)];
---

<BaseLayout>
    <h1>{pageTitle}</h1>

    <div class="tags">
        {tags.map(tag => (
            <p class="tag">
                <a href={`/tags/${tag}`}>{tag}</a>
            </p>
        ))}
    </div>
</BaseLayout>